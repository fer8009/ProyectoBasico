<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:background="@drawable/fondo"
        android:layout_height="fill_parent">
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".recetas">
    
    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_margin="35dp"
                                        app:cardBackgroundColor="#FFF"
                                        app:cardCornerRadius="30dp"
                                        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="350dp"
                      android:orientation="horizontal"
                      android:padding="10dp"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="90dp"
                       android:src="@drawable/toast"
                       android:layout_height="90dp"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"

                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Desayunos Saludables"
                          android:textSize="18dp"
                          android:layout_marginLeft="5dp"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="¡Descubre opciones saludables para tu desayuno"
                          android:textSize="14dp"
                          android:layout_marginLeft="5dp"
                          android:layout_height="wrap_content"/>
                <Button android:layout_width="wrap_content"
                        android:text="Ver más"
                        android:id="@+id/desayunos"
                        android:textColor="#FFF"
                        android:layout_gravity="center"
                        android:background="@drawable/bton_vermas"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_margin="35dp"
                                        app:cardBackgroundColor="#FFF"
                                        app:cardCornerRadius="30dp"
                                        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="350dp"
                      android:orientation="horizontal"
                      android:padding="10dp"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="90dp"
                       android:src="@drawable/turkey"
                       android:layout_height="90dp"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"

                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Comidas Saludables"
                          android:textSize="18dp"
                          android:layout_marginLeft="5dp"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="¡Descubre opciones saludables para tu comida"
                          android:textSize="14dp"
                          android:layout_marginLeft="5dp"
                          android:layout_height="wrap_content"/>
                <Button android:layout_width="wrap_content"
                        android:text="Ver más"
                        android:id="@+id/comidas"
                        android:textColor="#FFF"
                        android:layout_gravity="center"
                        android:background="@drawable/bton_vermas"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_margin="35dp"
                                        app:cardBackgroundColor="#FFF"
                                        app:cardCornerRadius="30dp"
                                        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="350dp"
                      android:orientation="horizontal"
                      android:padding="10dp"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="90dp"
                       android:src="@drawable/coffe"
                       android:layout_height="90dp"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"

                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Cenas Saludables"
                          android:textSize="18dp"
                          android:layout_marginLeft="5dp"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="¡Descubre opciones saludables para tu cena!"
                          android:textSize="14dp"
                          android:layout_marginLeft="5dp"
                          android:layout_height="wrap_content"/>
                <Button android:layout_width="wrap_content"
                        android:text="Ver más"
                        android:id="@+id/cenas"
                        android:textColor="#FFF"
                        android:layout_gravity="center"
                        android:background="@drawable/bton_vermas"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>