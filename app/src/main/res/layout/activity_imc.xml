<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".imc">

    <TextView android:layout_width="wrap_content"
              android:text="Calcula tu IMC"
              android:textColor="#FFF"
              android:textSize="40dp"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="20dp"
              android:layout_height="wrap_content"/>

    <EditText android:layout_width="300dp"
              android:id="@+id/peso"
              android:hint="    Peso en Kg"
              android:inputType="numberDecimal"
              android:textSize="20sp"
              android:layout_marginBottom="20dp"
              android:background="@drawable/tv_peso"
              android:layout_height="45dp"/>
    <EditText android:layout_width="300dp"
              android:id="@+id/estatura"
              android:hint="    Estatura en m"
              android:inputType="numberDecimal"
              android:textSize="20sp"
              android:layout_marginBottom="20dp"
              android:background="@drawable/tv_peso"
              android:layout_height="45dp"/>
    <Button android:layout_width="150dp"
              android:id="@+id/botonimc"
              android:hint="Calcular"
              android:textSize="20sp"
              android:layout_marginBottom="20dp"
              android:textColor="#FFF"
              android:background="@drawable/boton_calcular"
              android:layout_height="45dp"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/resultadoIMC"
              android:textColor="#FFF"
              android:layout_height="wrap_content"/>


</LinearLayout>